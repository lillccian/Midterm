<%= form_for @post,:url=>posts_path do|p| %>

	<%= p.label :name,'Name' %>
	<%= p.text_field :name %>
	<%= p.label :description,'description' %>
	<%= p.text_area :description %>
	<%= p.submit %>
	<%= p.collection_select(:category_id, Category.all, :id, :name) %>
	<%= link_to"back",posts_path %>
<% end %>
